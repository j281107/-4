1.
#include "iostream"
using namespace std;
int main()
{
   setlocale(LC_ALL, "RUS");
   int arr[10];
   for (int i = 0; i < 10; i++)
   {
    cin >> arr[i];
   }
    int max = arr[0];
    int min = arr[0];
    for (int i = 0; i < 10; i++)
    {
        if (arr[i] > max)
        {
            max = arr[i];
        }
        if (arr[i] < min)
        {
            min = arr[i];
        }
       cout << "Max: " << max << "Min: " << min << endl;
    }
      return 0;
}


2.#include "iostream"
using namespace std;
int main()
{
    setlocale(LC_ALL, "RUS");
    int i, n, k, min, max, start, end;
    int pr[12];
    for (i = 0;i < 12;i++)
    {
        cout << "Введите прибыль за " << i + 1 << " месяц: ";
        cin >> pr[i];
    }
    cout << "Введите границы диапазона: ";
    cin >> start >> end;
    start = start - 1;
    end = end - 1;
    min = pr[start];
    max = pr[start];
    for (i = start;i <= end;i++)
    {
     if (min > pr[i])
         min = pr[i];
      
    }
    for (i = 0;i < 12;i++)
    {
        if (min == pr[i])
            n = i;
    }
    cout << "Месяц с минимальным заработком: " << ++n << endl;

    for (i = start;i <= end;i++)
    {
        if (max < pr[i])
            max = pr[i];
    }
    for (i = 0;i < 12;i++)
    {
        if (max == pr[i])
            k = i;
    }
    cout << "Месяц с максимальным заработком: " << ++k << endl;

    return 0;
}


3.#include "iostream"
using namespace std;
int main()
{
    setlocale(LC_ALL, "RUS");
    int N = 0, cnt = 0;
    cout << "Vvedite kolichestvo elementov massiva: ";
    cin >> N;
    int array[N];

    for (int i = 0;i < N;i++)
    {
        array[i] = rand() % 50 - rand() % 50;
        cout << array[i] << " ";
        if (array[i] < 0)
            cnt++;
    }
    cout << "\nKolichestvo otricatelnih chisel: " << cnt << "\n";


    int min = 0;
    for (int c = 0;c < N;c++)
    {
        min = (abs(array[c]) < abs(array[min])) ? c : min;
    }
    cout << "\nMinimalnoe chislo po modulju : " << array[min] << "[" << min + 1 << "];" << endl;

    int sum = 0;
    for (int i = min + 1;i < N;i++)
    {
        sum += abs(array[i]);
    }
    cout << "Summa: " << sum << endl;

    for (int i = 0;i < N;i++)
    {
        if (array[i] < 0)
            array[i] = pow(array[i], 2);
        cout << array[i] << " ";
    }
    cout << "\n\n";
    int tmp = 0;
    for (int i = 0; i < N - 1; ++i)
    {
        for (int j = 0; j < N - 1; ++j)
        {
            if (array[j + 1] < array[j])
            {
                tmp = array[j + 1];
                array[j + 1] = array[j];
                array[j] = tmp;
            }
        }
    }

    cout << "Otsortirovannij massiv: ";
    for (int i = 0;i < N;i++)
    {
        cout << array[i] << " ";
    }

    system("pause>>nul");
    return 0;
}
